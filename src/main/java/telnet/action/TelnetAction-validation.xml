<!DOCTYPE validators PUBLIC "-//Apache Struts//XWork Validator 1.0.2//EN" "http://struts.apache.org/dtds/xwork-validator-1.0.2.dtd">

<validators>
	<field name="customizedCMD">
		<field-validator type="regex">
			<param name="regex"><![CDATA[^(?!rm).*$]]></param>
			<message key="error.customizedCMD.rm" />
		</field-validator>
		<field-validator type="regex">
			<param name="regex"><![CDATA[^(?!kill).*$]]></param>
			<message key="error.customizedCMD.kill" />
		</field-validator>
		<field-validator type="regex">
			<param name="regex"><![CDATA[^(?!reboot).*$]]></param>
			<message key="error.customizedCMD.reboot" />
		</field-validator>
	</field>
</validators>
